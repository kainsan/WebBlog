@using PagedList.Core.Mvc
@model IEnumerable<WebBlog.Models.Account>

@{
    ViewData["Title"] = "Account Manager";
    Layout = "~/Areas/Admin/Views/Shared/_LayoutAdmin.cshtml";
}

<div class="slim-pageheader">
    <ol class="breadcrumb slim-breadcrumb">
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Home" asp-action="Index">Home</a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Accounts" asp-action="Index"> List Accounts </a></li>
        <li class="breadcrumb-item"><a asp-area="Admin" asp-controller="Accounts" asp-action="Create" aria-current="page">Create New Account</a></li>
    </ol>
    <h6 class="slim-pagetitle">Account Manager</h6>
</div><!-- slim-pageheader -->
<div class="section-wrapper">
    <div class="table-responsive">
        <table class="table mg-b-0">
            <thead>
                <tr>
                    <th>ID</th>
                    <th>Name </th>
                    <th>Status</th>
                    <th>Sort</th>
                    <th></th>
                </tr>
            </thead>
            <tbody>
                @if (Model != null && Model.Count() > 0)
                {
                    foreach (var item in Model)
                    {
                        <tr>
                            <th scope="row">@item.AccountId</th>
                            <td>
                                <p>Full Name :@item.FullName</p>
                                <p>Email :@item.Email</p>
                                <p>Phone : @item.Phone</p>
                                <p>Last Login: @item.LastLogin</p>
                            </td>
                            <td>
                                @if (item.Active == true)
                                {
                                    <span class="badge badge-primary  ">Active</span>
                                }
                                else
                                {
                                    <span class="badge badge-primary  ">Block</span>
                                }
                            </td>
                            <td>@item.Role.RoleDescription</td>
                            <td>
                                <a asp-area="Admin" asp-controller="Categories" asp-action="Details" asp-route-id="@item.AccountId" class="btn btn-success">View</a>
                                <a asp-area="Admin" asp-controller="Categories" asp-action="Edit" asp-route-id="@item.AccountId" class="btn btn-primary">Edit</a>
                                <a asp-area="Admin" asp-controller="Categories" asp-action="Delete" asp-route-id="@item.AccountId" class="btn btn-danger">Delete</a>
                            </td>
                        </tr>
                    }
                }
            </tbody>
        </table>
        
    </div><!-- table-responsive -->
</div><!-- section-wrapper -->